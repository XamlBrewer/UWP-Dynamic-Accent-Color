<Page x:Class="XamlBrewer.Uwp.DynamicAccentColor.DonkeyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:XamlBrewer.Uwp.DynamicAccentColor"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      RequestedTheme="Light">
    <Grid Background="Transparent">
        <TextBlock Text="Donkey"
                   Foreground="{StaticResource PageForegroundBrush}"
                   Margin="24"
                   FontSize="48"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left" />
        <Path Data="{StaticResource DonkeyIcon}"
              Fill="{ThemeResource SystemControlHighlightAccentBrush}"
              VerticalAlignment="Top"
              HorizontalAlignment="Right"
              Height="96"
              Width="96"
              Margin="24"
              Stretch="Uniform" />
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <local:SomeControls />
        </StackPanel>

    </Grid>
</Page>
